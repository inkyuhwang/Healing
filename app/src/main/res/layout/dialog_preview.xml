<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/preview_bg"
    >

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/prev_image_view"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:scaleType="fitCenter"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prev_image_view"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/prev_recapture_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_normal_btn_blank"
            android:text="@string/preview_retry"
            style="@style/popup.blank.btn"
            />

        <Button
            android:id="@+id/prev_submit_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_normal_btn_blank"
            android:text="@string/preview_submit"
            android:layout_marginStart="80dp"
            style="@style/popup.blank.btn"
            />

    </LinearLayout>
</RelativeLayout>