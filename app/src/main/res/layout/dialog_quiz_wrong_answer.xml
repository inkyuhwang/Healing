<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/blank_paper"
    >

    <TextView
        android:id="@+id/quiz_wrong_dialog_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/popup.wronganswer.textview"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:inputType="textMultiLine"
        android:maxWidth="320dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textColor="#000000"
        android:lineSpacingExtra="0dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_dialog_wrong_retry_msg"
        android:layout_below="@+id/quiz_wrong_dialog_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        style="@style/popup.wronganswer.textview"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:id="@+id/quiz_wrong_answer_retry_btn"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:background="@drawable/selector_logo_large_blank_btn"
            android:text="@string/retry"
            style="@style/popup.blank.large.text"
            />
    </LinearLayout>
</RelativeLayout>