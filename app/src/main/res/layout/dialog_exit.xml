<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/blank_paper"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_dialog_msg"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        style="@style/popup.textview"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:id="@+id/exit_confirm_negative"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_normal_btn_blank"
            android:text="@string/no"
            style="@style/popup.blank.btn"
            />
        <Button
            android:id="@+id/exit_confirm_positive"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_normal_btn_blank"
            android:layout_marginStart="40dp"
            android:text="@string/yes"
            android:fontFamily="@font/poor"
            style="@style/popup.blank.btn"
            />
    </LinearLayout>


</RelativeLayout>