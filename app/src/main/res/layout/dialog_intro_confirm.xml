<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup"
    >

    <TextView
        android:id="@+id/intro_confirm_dialog_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_confirm_dialog_info_format"
        style="@style/popup.textview"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_confirm_dialog_msg"
        android:layout_centerInParent="true"
        style="@style/popup.textview"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:id="@+id/intro_confirm_negative"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_small_btn_blank"
            android:text="@string/no"
            android:textColor="#503604"
            android:fontFamily="@font/hy_wood_b"
            />
        <Button
            android:id="@+id/intro_confirm_positive"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_small_btn_blank"
            android:layout_marginStart="50dp"
            android:text="@string/yes"
            android:textColor="#503604"
            android:fontFamily="@font/hy_wood_b"
            />
    </LinearLayout>
</RelativeLayout>