<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/blank_paper"
    >

    <TextView
        android:id="@+id/intro_confirm_dialog_info"
        style="@style/popup.textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="60dp"
        android:text="@string/intro_confirm_dialog_info_format"
        android:textColor="@color/color_c_brown"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_confirm_dialog_msg"
        style="@style/popup.textview"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/intro_confirm_dialog_info"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        >
        <Button
            android:id="@+id/intro_confirm_negative"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_normal_btn_blank"
            android:text="@string/no"
            style="@style/popup.blank.btn"
            />
        <Button
            android:id="@+id/intro_confirm_positive"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_normal_btn_blank"
            android:layout_marginStart="80dp"
            android:text="@string/yes"
            android:fontFamily="@font/poor"
            style="@style/popup.blank.btn"
            />
    </LinearLayout>
</RelativeLayout>